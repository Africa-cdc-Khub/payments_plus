                                                        "delegate_category": {
                                                            "type": "string",
                                                            "example": "Government Official"
                                                        }
                                                    },
                                                    "type": "object"
                                                },
                                                "package": {
                                                    "properties": {
                                                        "id": {
                                                            "type": "integer",
                                                            "example": 1
                                                        },
                                                        "name": {
                                                            "type": "string",
                                                            "example": "Standard Package"
                                                        },
                                                        "price": {
                                                            "type": "string",
                                                            "example": "500.00"
                                                        },
                                                        "description": {
                                                            "type": "string",
                                                            "example": "Standard package description"
                                                        }
                                                    },
                                                    "type": "object"
                                                },
                                                "amount": {
                                                    "type": "string",
                                                    "example": "500.00"
                                                },
                                                "rejection_reason": {
                                                    "type": "string",
                                                    "nullable": true
                                                },
                                                "created_at": {
                                                    "type": "string",
                                                    "format": "date-time",
                                                    "example": "2025-10-08 10:30:45"
                                                },
                                                "updated_at": {
                                                    "type": "string",
                                                    "format": "date-time",
                                                    "example": "2025-10-08 12:15:30"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "Access denied - not from localhost",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": false
                                        },
                                        "error": {
                                            "type": "string",
                                            "example": "Access denied. This endpoint is only accessible from localhost."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Registration not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": false
                                        },
                                        "error": {
                                            "type": "string",
                                            "example": "Registration not found"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Server error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": false
                                        },
                                        "error": {
                                            "type": "string",
                                            "example": "Failed to fetch registration"
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Error details"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/registrations/stats": {
            "get": {
                "tags": [
                    "Registrations"
                ],
                "summary": "Get registration statistics",
                "description": "Fetch comprehensive statistics about registrations including status counts, payment totals, and revenue. Only accessible from localhost.",
                "operationId": "getRegistrationStats",
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "data": {
                                            "properties": {
                                                "total": {
                                                    "description": "Total number of registrations",
                                                    "type": "integer",
                                                    "example": 150
                                                },
                                                "by_status": {
                                                    "properties": {
                                                        "pending": {
                                                            "type": "integer",
                                                            "example": 45
                                                        },
                                                        "approved": {
                                                            "type": "integer",
                                                            "example": 80
                                                        },
                                                        "rejected": {
                                                            "type": "integer",
                                                            "example": 25
                                                        }
                                                    },
                                                    "type": "object"
                                                },
                                                "by_payment_status": {
                                                    "properties": {
                                                        "pending": {
                                                            "type": "integer",
                                                            "example": 60
                                                        },
                                                        "paid": {
                                                            "type": "integer",
                                                            "example": 85
                                                        },
                                                        "failed": {
                                                            "type": "integer",
                                                            "example": 5
                                                        }
                                                    },
                                                    "type": "object"
                                                },
                                                "delegates": {
                                                    "properties": {
                                                        "total": {
                                                            "type": "integer",
                                                            "example": 50
                                                        },
                                                        "pending": {
                                                            "type": "integer",
                                                            "example": 15
                                                        },
                                                        "approved": {
                                                            "type": "integer",
                                                            "example": 30
                                                        },
                                                        "rejected": {
                                                            "type": "integer",
                                                            "example": 5
                                                        }
                                                    },
                                                    "type": "object"
                                                },
                                                "revenue": {
                                                    "properties": {
                                                        "total": {
                                                            "description": "Total revenue from paid registrations",
                                                            "type": "number",
                                                            "format": "float",
                                                            "example": 127500
                                                        },
                                                        "pending": {
                                                            "description": "Pending revenue",
                                                            "type": "number",
                                                            "format": "float",
                                                            "example": 45000
                                                        }
                                                    },
                                                    "type": "object"
                                                }
                                            },
                                            "type": "object"
                                        },
                                        "generated_at": {
                                            "type": "string",
                                            "format": "date-time",
                                            "example": "2025-10-08 12:30:45"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "Access denied - not from localhost",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": false
                                        },
                                        "error": {
                                            "type": "string",
                                            "example": "Access denied. This endpoint is only accessible from localhost."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Server error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": false
                                        },
                                        "error": {
