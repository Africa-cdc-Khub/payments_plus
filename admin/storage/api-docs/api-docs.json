                                                            "type": "string",
                                                            "example": "John Doe"
                                                        },
                                                        "email": {
                                                            "type": "string",
                                                            "example": "john@example.com"
                                                        },
                                                        "phone": {
                                                            "type": "string",
                                                            "example": "+1234567890"
                                                        },
                                                        "organization": {
                                                            "type": "string",
                                                            "example": "ABC Corp"
                                                        },
                                                        "country": {
                                                            "type": "string",
