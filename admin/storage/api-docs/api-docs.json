    "components": {
        "securitySchemes": {
            "localhost": {
                "type": "apiKey",
                "description": "Only accessible from localhost (127.0.0.1, localhost, ::1)",
                "name": "X-Forwarded-For",
                "in": "header"
            }
        }
    },
    "tags": [
