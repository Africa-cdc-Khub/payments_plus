# Disable directory browsing
Options -Indexes
# Custom error pages
ErrorDocument 403 /403.html

# Deny access to all files except PHP files
<Files "*">
    Require all denied
</Files>

# Allow only PHP files
<Files "*.php">
    Require all granted
</Files>

# Prevent access to sensitive files
<FilesMatch "\.(log|txt|md|json|env|ini|conf)$">
    Require all denied
</FilesMatch>
